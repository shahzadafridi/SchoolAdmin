<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Fragments.StudentSmsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/monestro_bold"
        android:text="Classes"
        android:textColor="#000"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/send_sms_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/spinner_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/monestro_bold"
        android:text="Students"
        android:textColor="#000"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/send_sms_spinner_stdent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/spinner_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/monestro_bold"
            android:text="Message"
            android:textColor="#000"
            android:textSize="14sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="English"
                android:fontFamily="@font/monestro_bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urdu"
                android:fontFamily="@font/monestro_bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/send_sms_message_et"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/purple_rect_bg"
            android:fontFamily="@font/monestro_regular"
            android:gravity="top|left"
            android:hint="Enter your message"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:textSize="14sp" />

        <ProgressBar
            android:id="@+id/send_sms_progessBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/send_sms_select_sim_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/sim_card_icon" />

        <TextView
            android:id="@+id/send_sms_select_sim_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/monestro_bold"
            android:gravity="center_vertical"
            android:text="Select sim card"
            android:textColor="#000"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/send_sms_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/black_rect_bg"
        android:fontFamily="@font/monestro_bold"
        android:text="Send SMS"
        android:textColor="#fff"
        android:textSize="16dp" />

</LinearLayout>